colorscheme underwater-mod
set encoding=utf-8

" ----- "
" Fonts "
" ----- "

set guifont=Inconsolata:h14,Menlo:h14,Consolas:h14
" A higher line height
set linespace=3
" MacVim specific
set antialias

" ----------------- "
" Window Appearance "
" ----------------- "

" Hide toolbar.
set guioptions-=T
" Don't show right scrollbar
set guioptions-=r
" Don't show left scrollbar
set guioptions-=L

