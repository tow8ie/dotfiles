# Taken that from Ryan Batesâ€™ dotfiles: http://github.com/ryanb/dotfiles
complete -C ~/.bash/scripts/rake_completion -o default rake
source ~/.bash/scripts/terminitor-completion.sh

# Quick and dirty hack to autocomplete SSH host
# @see http://hints.macworld.com/article.php?story=20100113142633883
complete -o default -o nospace -W "$(/usr/bin/env ruby -ne 'puts $_.split(/[,\s]+/)[1..-1].reject{|host| host.match(/\*|\?/)} if $_.match(/^\s*Host\s+/);' < $HOME/.ssh/config)" scp sftp ssh

# bash-completion: http://bash-completion.alioth.debian.org/
# Installed via Homebrew
if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

