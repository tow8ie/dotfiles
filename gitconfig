[alias]
  co = checkout
  st = status
  s = status -sb
  c = commit
  l = log --oneline --decorate
  d = diff --word-diff
  pr = pull --rebase
  g = log --graph --all --decorate --pretty=oneline --abbrev-commit -n 25
  gr = log --graph --all --decorate --pretty=oneline --abbrev-commit
  gg = log --graph --all --pretty='format:%Cred%h %Cblue%cn (%ar)%Cgreen%d %Creset%s' -n 25
  ggr = log --graph --all --pretty='format:%Cred%h %Cblue%cn (%ar)%Cgreen%d %Creset%s'
  # History of deleted files
  df = log --diff-filter=D --summary
  ctags = !.git/hooks/ctags
[user]
  name = Tobias Adam
  email = tow8ie@gmail.com
[color]
  status = auto
  diff = auto
  branch = auto
[merge]
  tool = threesome
[core]
  excludesfile = ~/.gitignore
[push]
  default = tracking
[mergetool "threesome"]
  cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
  trustExitCode = true
[init]
  templatedir = ~/.gittemplate
